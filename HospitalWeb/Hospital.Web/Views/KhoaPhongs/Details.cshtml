@using Hospital.Web.EfModels
@model KhoaPhong
@using Hospital.Web.Controllers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
}

@{
    ViewData["Title"] = "Details";
}

<div class="breadvroumb_area">
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h1>@Model.TenKhoaPhong</h1>
                <div class="breadcroumb_link">
                    <a asp-action="@nameof(HomesController.Index)"
                       asp-controller="@nameof(HomesController).Replace("Controller","")">Trang chủ</a>/ Khoa phòng
                </div>
            </div>
        </div>
    </div>
</div>
<div class="dept_details_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <ul id="submenu">
                    @{
                        var listKhoaPhong = (List<KhoaPhong>)ViewBag.listkhoaPhongKhac;
                    }
                    @foreach (var item in listKhoaPhong)
                    {
                        <li>
                            <a asp-action="@nameof(KhoaPhongsController.Details)"
                               asp-controller="@nameof(KhoaPhongsController).Replace("Controller","")"
                               asp-route-id="@item.Id"
                               target="_blank">@item.TenKhoaPhong</a>
                        </li>
                    }

                </ul>

            </div>
           
            <div class="col-md-9">
                <h1>@Model.TieuDeKhoa</h1>
                <p>
                    @Model.GioiThieu
                </p>
                <br>

                <p>@Html.Raw(Model.NoiDung)</p>
                <br>
            </div>
        </div>
        <div class="dept_fee_area">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-8">
                    <div class="treatment_fee_wraper">
                        <h4>Bảng giá dịch vụ</h4>
                        <ul class="treatment_fee">
                            <li><span>Captopril Renogram</span><strong>$300</strong></li>
                            <li><span>Paratyroid scan</span><strong>$450</strong></li>
                            <li><span>Heart Patient</span><strong>$95</strong></li>
                            <li><span>Liposuction</span><strong>$185</strong></li>
                            <li><span>Tummy Tuck</span><strong>$145</strong></li>
                            <li><span>Cardiac ablation</span><strong>$360</strong></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-6 col-lg-4">
                    <div class="working_box" style="background-image: url(../images/img/about_bg.jpg);">
                        <h4>Thời gian làm việc</h4>
                        <ul>
                            <Li>Thứ 2-Thứ 6 08:00am - 10:00pm </Li>
                            <Li>Thứ 7 - 10:00am - 07:00pm </Li>
                            <Li>Chủ nhật - Emergency Only </Li>
                            <Li>Thứ 2 - 8:00 AM – 10:00 pm</Li>
                            <Li>Thứ 3 - 8:00 AM – 7:00 pm</Li>
                            <Li>Cấp cứu 24/7 </Li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
}

