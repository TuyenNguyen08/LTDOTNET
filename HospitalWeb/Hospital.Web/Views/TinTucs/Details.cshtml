@model Hospital.Web.EfModels.TinTuc
@using Hospital.Web.Controllers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Tin tức";

}

@section css {

    <link href="~/css/about.css" rel="stylesheet" />
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

}
<div class="breadvroumb_area">
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h1>@Model.TieuDe</h1>
                <div class="breadcroumb_link">
                    <a asp-action="@nameof(HomesController.Index)"
                       asp-controller="@nameof(HomesController).Replace("Controller","")">Trang chủ</a>/ Tin tức mới nhất
                </div>
            </div>
        </div>
    </div>
</div>

<div class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="blog_detaisl_area">
                    <div class="blog_full_content">
                        <img src="@Url.Action("GetImage" ,"ImageBrowser",new {id=Model.HinhAnhMinhHoa })" />
                        <div class="blog_meta">
                            <a href="#">@Model.NgayTao?.ToString("dd/MM/yy hh:mm:ss")</a>
                        </div>
                        <div class="blog_quote">
                            <p>@Model.GioiThieu</p>
                        </div>
                        <p>
                            @Html.Raw(Model.NoiDung) <br>
                            <br>

                            <br>                           
                    </div>
                </div>
            </div>
        
        </div>
    </div>
</div>

@section scripts {

}
