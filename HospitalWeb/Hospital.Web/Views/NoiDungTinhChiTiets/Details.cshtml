@model Hospital.Web.EfModels.NoiDungTinhChiTiet
@using Hospital.Web.EfModels
@using Hospital.Web.Controllers
@{
    ViewBag.Title = "Nội dung";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {

    <link href="~/css/about.css" rel="stylesheet" />
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link href="~/css/DichVuKhac.css" rel="stylesheet" />

}
    <div class="breadvroumb_area">
        <div class="container">
            <div class="row text-center">
                <div class="col">
                    <h1>@Model.TieuDe</h1>
                    <div class="breadcroumb_link">
                    </div>
                </div>
            </div>
        </div>
    </div>
<div class=" about_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 order-lg-7">
                <div class="about_video_content">
                    <a href="#" class="video_popup">
                        <img src="@Url.Action("GetImage" ,"ImageBrowser",new {id=Model.HinhAnh })" />
                    </a>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="about_content">
                    <h1>@Model.TieuDe</h1>
                    <p>@Html.Raw(Model.GioiThieu)</p>
                </div>
            </div>
        </div>
        <div class="row">
            <p class="col-lg-12">@Html.Raw(Model.NoiDung)</p>
            <br />
        </div>
    </div>
</div>

<h1 class="header_DV">
    Dịch vụ khác
</h1>
<hr />
<ul>
    @foreach (var dichVu in (ViewBag.lsNDChiTiet as List<NoiDungTinhChiTiet>))
    {
    <li>
        <a asp-action="@nameof(NoiDungTinhChiTietsController.Details)"
           class="dichVuKhac"
           asp-controller="@nameof(NoiDungTinhChiTietsController).Replace("Controller", "")"
           asp-route-id="@dichVu.Id">
            <i class="zmdi zmdi-badge-check icon"></i> <span>@dichVu.TieuDe</span>
        </a>
    </li>

    }
</ul>

@section scripts {

}