@model Hospital.Web.EfModels.GioiThieuChiTiet
@using Hospital.Web.Controllers

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section css {

    <link href="~/css/about.css" rel="stylesheet" />
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">

}
<div class="breadvroumb_area">
    <div class="container">
        <div class="row text-center">
            <div class="col">
                <h1>@Model.Ten</h1>
                <div class="breadcroumb_link">
                    <a href="index.html">Trang chủ </a>/ Giới thiệu
                </div>
            </div>
        </div>
    </div>
</div>
<div class=" about_page">
    <div class="container">
        <div class="row">
            <div class="col-lg-5 order-lg-7">
                <div class="about_video_content">
                    <a href="#" class="video_popup">
                        <img src="@Url.Action("GetImage" ,"ImageBrowser",new {id=Model.HinhAnh })" alt="">
                    </a>
                </div>
            </div>
            <div class="col-lg-7">
                <div class="about_content">
                    <h1>@Model.Ten</h1>
                    <p>@Html.Raw(Model.GioiThieu)</p>
                   
                </div>
            </div>
        </div>
        <div>
            <p class="col-lg-12">@Html.Raw(Model.NoiDung)</p>
            <br />
        </div>
      
    </div>
</div>

@section scripts {

}