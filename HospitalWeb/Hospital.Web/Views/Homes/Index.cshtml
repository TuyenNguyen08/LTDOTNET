<!-- News Area Start-->
<div class="news_area">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="section_title">
                    <h1>Liên hệ ngay</h1>
                    <p>
                        Phục vụ 24/24 tất cả các ngày trong tuần kể cả ngày lễ
                    </p>
                </div>
                <form action="#" class="contact_form">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <input type="text" placeholder="Tên bạn">
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <input type="email" placeholder="Email">
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <input type="number" placeholder="Số điện thoại">
                        </div>
                    </div>

                    <div class="row">
                        <div class="col"><textarea placeholder="Ghi chú"></textarea></div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <button type="submit" class="custom_btn">Gửi <i class="zmdi zmdi-plus"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col">
                <div class="section_title">
                    <h1>Tin tức mới nhất</h1>
                    <p>
                        Cập nhật thông tin mới nhất của bệnh viện
                    </p>
                </div>
                <div class="latest_news">
                    @foreach (var tinTuc in Model.lsTinTuc)
                    {
                    <a asp-action="@nameof(TinTucsController.Details)"
                               asp-controller="@nameof(TinTucsController).Replace("Controller","")"
                               asp-route-id="@tinTuc.Id"
                               target="_blank" class="single_latest_news">
                        <span class="l_img" style="background-image: url(../images/img/news1.jpg);"></span>
                        <h5>
                           @tinTuc.TieuDe
                        </h5>
                        <span>@tinTuc.NgayTao</span>
                        <p>
                            @tinTuc.GioiThieu
                        </p>
                    </a>
                        }
</div>
            </div>
        </div>
    </div>
</div>



