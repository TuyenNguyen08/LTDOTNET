@model Hospital.Web.Models.HomeModel


@using Hospital.Web.Controllers
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css {
    <link href="~/css/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/owl.carousel.min.css">
    <link href="~/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <link href="~/css/slicknav.min.css" rel="stylesheet" />
    <link href="~/css/nice-select.css" rel="stylesheet" />
    <link href="~/css/responsive.css" rel="stylesheet" />
    <style>
        .cc {
            text-align: center;
            padding: 30px;
        }

            .cc h2 {
                color: #ffbc09;
            }

            .cc h3 {
                color: #01f8fd;
            }

        .col {
            margin-bottom: 50px;
        }

        .video ul {
            width: 100%;
            height: 200px;
        }
    </style>
}

<div class="welcome_areaa" style="background-image: url(../images/img/welcome_shap.png);">
    <div class="container">
        <div class="welcome_slider owl-carousel">
            @foreach (var slide in Model.lsSLide)
            {
                <div class="single_welcome_slider" style="background-image:url(@Url.Content("~/images/image_slider/" + slide.HinhAnh));background-repeat: no-repeat;
    background-size: cover;">
                </div>
            }
        </div>
    </div>
</div>
<!-- Welcome Area End-->
<!-- Cbox Area Start-->
<div class="cbox_area">
    <div class="container">
        <div style="background-color: #f6fbff;">
            @foreach (var subNote in Model.lsSubNote)
            {
                <div class="col-md-3">
                    <div class="single_cbox">
                        <div class="cbox_title">
                            <div class="cbox_icon"><img src="@Url.Content("~/images/image_subNote/" + subNote.Image)" alt="" /></div>

                            <a asp-action="@nameof(HenKhamBenhsController.Index)"
                               asp-controller="@nameof(HenKhamBenhsController).Replace("Controller", "")"><h4>@subNote.TieuDe</h4></a>
                        </div>
                        <p>
                            @subNote.NoiDung
                        </p>
                        <a href="#">Xem thêm <i class="zmdi zmdi-plus"></i></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<div class="container" style="background-color:#016ca0; margin:10px">
    @foreach (var subPhone in Model.lsSubPhone)
    {
        <div class="col-lg-4 cc">
            <h2>@subPhone.Name</h2>
            <h3>@subPhone.SoDienThoai</h3>
        </div>
    }
</div>
<!-- Cbox Area end-->
<!-- About Area Start-->
<div class="about_area ">
    <div class="container">
        <div>
            <div class="col-lg-8">
                <div class="about_content">
                    <div class="col background_grey">
                        <div class="section_title">
                            <h1>Hoạt động</h1>
                        </div>
                        <div class="latest_news">
                            @foreach (var hoatdong in Model.lsHoatDong)
                            {
                                <a asp-action="@nameof(HoatDongsController.Details)"
                                   asp-controller="@nameof(HoatDongsController).Replace("Controller","")"
                                   asp-route-id="@hoatdong.Id"
                                   target="_blank" class="single_latest_news">
                                    <span class="l_img"><img src="@Url.Content("~/images/image_hoatdong/" + hoatdong.HinhAnhMinhHoa)" /></span>
                                    <h5>
                                        @hoatdong.TieuDe
                                    </h5>
                                    <span>@hoatdong.NgayTao</span>
                                    <p>
                                        @hoatdong.GioiThieu
                                    </p>
                                </a>
                            }
                        </div>
                    </div>
                </div>
                <div class="about_content">
                    <div class="col background_grey">
                        <div class="section_title">
                            <h1>Tin tức mới nhất</h1>
                        </div>
                        <div class="latest_news">
                            @foreach (var tinTuc in Model.lsTinTuc)
                            {
                                <a asp-action="@nameof(TinTucsController.Details)"
                                   asp-controller="@nameof(TinTucsController).Replace("Controller","")"
                                   asp-route-id="@tinTuc.Id"
                                   target="_blank" class="single_latest_news">
                                    <span class="l_img"><img src="@Url.Content("~/images/image_tintuc/" + tinTuc.HinhAnhMinhHoa)" /></span>
                                    <h5>
                                        @tinTuc.TieuDe
                                    </h5>
                                    <span>@tinTuc.NgayTao</span>
                                    <p>
                                        @tinTuc.GioiThieu
                                    </p>
                                </a>
                            }
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-lg-4 video">
                <div class="section_title">
                    <h1>Video</h1>
                </div>
                @foreach (var video in Model.lsVideo)
                {
                    <ul>
                        <li>
                            <a href="@video.DuongDanFile" target="_blank">
                                <i class="zmdi zmdi-play-circle"> @video.TieuDe</i>
                                <br />
                                <img src="@Url.Content("~/images/image_video/" + video.HinhAnh)" alt="">
                            </a>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
</div>
<!-- News Area Start-->



@section scripts {
    <script src="~/js/jquery-2.1.4.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/waypoint.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/jquery.slicknav.min.js"></script>
    <script src="~/js/jquery.nice-select.min.js"></script>


}
