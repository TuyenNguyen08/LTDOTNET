                        <div class="blog_meta">
                            <a href="#">@Model.NgayTao</a> <a href="#">Thích: 173</a> <a href="#">Bình luận: 56</a>
                        </div>
                        <div class="blog_quote">
                            <p>@Model.GioiThieu</p>
                        </div>
                        <p>
                            @Html.Raw(Model.NoiDung) <br>
                            <br>

                            <br>
                            <div class="tag_and_social_bar">
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="blog_tag">
                                            <i class="zmdi zmdi-label"></i>
                                            <a href="#">Loiich</a>
                                            <a href="#">Moitruong</a>
                                            <a href="#">Xuly</a>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="share_with">
                                            <a href="#"><i class="zmdi zmdi-twitter"></i></a>
                                            <a href="#"><i class="zmdi zmdi-facebook"></i></a>
                                            <a href="#"><i class="zmdi zmdi-instagram"></i></a>
                                            <a href="#"><i class="zmdi zmdi-linkedin"></i></a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>
