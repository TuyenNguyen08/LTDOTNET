@using AdminWebBenhVien.Models
@using AdminWebBenhVien.EfModels

@model VideoEditViewModel

@section css{
    <link href="~/css/Create.css" rel="stylesheet" />
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Chỉnh sửa danh sách video<span style="color:orange"></span></h1>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Edit" method="post">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#paneGioiThieu" aria-expanded="false">Thông tin</a>
                            </h4>
                        </div>
                        <div id="paneGioiThieu" class="collapse in" aria-expanded="false">

                            <br />
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>

                            <div class="panel-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />

                                <div class="form-group">
                                    <label asp-for="NgonNguId" class="control-label">Ngôn ngữ</label>
                                    <kendo-dropdownlist for="NgonNguId"
                                                        option-label="-- Chọn ngôn ngữ --"
                                                        bind-to="@((List<NgonNgu>)ViewBag.ListNgonNgu)"
                                                        datatextfield="@nameof(NgonNgu.TenNgonNgu)"
                                                        datavaluefield="@nameof(NgonNgu.Id)"
                                                        value="@Model.NgonNguId" />
                                    <span asp-validation-for="NgonNguId" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="TieuDe" class="control-label">Tiêu đề</label>
                                    <input asp-for="TieuDe" class="form-control" />
                                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="GioiThieu" class="control-label">Giới thiệu</label>
                                    @Html.TextAreaFor(h => h.GioiThieu, 5, 1, new { @class = "k-textbox" })
                                    <span asp-validation-for="GioiThieu" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DuongDanFile" class="control-label">Đường link</label>
                                    <input asp-for="DuongDanFile" class="form-control" />
                                    <span asp-validation-for="DuongDanFile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Hình ảnh</label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Ngày tạo</label>
                                    <label class="control-label bv-label-content">@Model.NgayTao?.ToString("dd/MM/yy HH:mm:ss")</label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Người tạo</label>
                                    <label class="control-label bv-label-content">@Model.NguoiTao</label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Ngày sửa</label>
                                    <label class="control-label bv-label-content">@Model.NgaySua?.ToString("dd/MM/yy HH:mm:ss")</label>
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Người sửa</label>
                                    <label class="control-label bv-label-content">@Model.NguoiSua</label>
                                </div>

                            </div>
                            <div class="form-group">
                                <input type="submit" value="Save" class="btn btn-success" />
                                <a asp-action="Index" class="btn btn-default">Trở về danh sách</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts{

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
