@model AdminWebBenhVien.EfModels.Video

@using AdminWebBenhVien.Models

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section css{
    <link href="~/css/Create.css" rel="stylesheet" />
}
<div id="wrapper">
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Chỉnh sửa danh sách video<span style="color:orange"></span></h1>
            </div>
        </div>
        <br />
        <div class="row">
            <div class="col-lg-12">
                <form asp-action="Create">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="#accordion" href="#paneGioiThieu" aria-expanded="false">Thông tin chung</a>
                            </h4>
                        </div>
                        <div id="paneGioiThieu" class="collapse in" aria-expanded="false">
                            <div class="panel-body">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <input type="hidden" asp-for="Id" />
                                <div class="form-group">
                                    <label asp-for="Stt" class="control-label">STT</label>
                                    <input asp-for="Stt" class="form-control" />
                                    <span asp-validation-for="Stt" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="TieuDe" class="control-label">Tiêu đề</label>
                                    <input asp-for="TieuDe" class="form-control" />
                                    <span asp-validation-for="TieuDe" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="GioiThieu" class="control-label">Giới thiệu</label>
                                    <input asp-for="GioiThieu" class="form-control" />
                                    <span asp-validation-for="GioiThieu" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="DuongDanFile" class="control-label">Đường dẫn file</label>
                                    <input asp-for="DuongDanFile" class="form-control" />
                                    <span asp-validation-for="DuongDanFile" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="IsYoutube" /> @Html.DisplayNameFor(model => model.IsYoutube)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="NoiBat" /> @Html.DisplayNameFor(model => model.NoiBat)
                                        </label>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label asp-for="LuotXem" class="control-label">Lượt xem</label>
                                    <input asp-for="LuotXem" class="form-control" />
                                    <span asp-validation-for="LuotXem" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="FkNgonNgu" class="control-label">Ngôn ngữ</label>
                                    <kendo-dropdownlist for="FkNgonNgu"
                                                        bind-to="@((List<DropdownlistViewModel>)ViewBag.ListNgonNgu)"
                                                        datatextfield="@nameof(DropdownlistViewModel.Ten)"
                                                        datavaluefield="@nameof(DropdownlistViewModel.Id)" />
                                    <span asp-validation-for="FkNgonNgu" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NgayTao" class="control-label">Ngày tạo</label>
                                    <input asp-for="NgayTao" class="form-control" />
                                    <span asp-validation-for="NgayTao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NguoiTao" class="control-label">Người tạo</label>
                                    <input asp-for="NguoiTao" class="form-control" />
                                    <span asp-validation-for="NguoiTao" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="UserNguoiSua" class="control-label">Người sửa</label>
                                    <input asp-for="UserNguoiSua" class="form-control" />
                                    <span asp-validation-for="UserNguoiSua" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="NgaySua" class="control-label">Ngày sửa</label>
                                    <input asp-for="NgaySua" class="form-control" />
                                    <span asp-validation-for="NgaySua" class="text-danger"></span>
                                </div>

                                <div class="form-group">
                                    <label asp-for="HinhAnh" class="control-label">Hình ảnh</label>
                                    <input asp-for="HinhAnh" class="form-control" />
                                    <span asp-validation-for="HinhAnh" class="text-danger"></span>
                                </div>
                                <div class="form-group" id="save">
                                    <input type="submit" value="Save" class="btn btn-success" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>
